{
  "name": "dreamstack-demux",
  "version": "1.0.0",
  "description": "Demux relay for EOSIO dapps",
  "main": "src/index",
  "author": "gaboesquivel.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn serve",
    "build": "yarn lint --fix && yarn build-ts",
    "serve": "node dist",
    "watch-node": "nodemon dist",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint --ignore-path .gitignore \"**/*.+(js|ts|tsx)\" --quiet --fix",
    "debug": "yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|tsx)\"",
    "validate": "yarn format && yarn lint"
  },
  "devDependencies": {
    "@blockmatic/eslint-config": "^1.3.5",
    "@blockmatic/prettier-config": "^1.2.2",
    "@blockmatic/tsconfig": "^1.6.0",
    "concurrently": "^5.0.2",
    "eslint": "^6.7.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  }
}
